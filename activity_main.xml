<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="100dp"
        android:layout_height="210dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="131dp"
        android:layout_marginTop="97dp"
        android:background="@android:color/transparent"
        android:fontFamily="casual"
        android:textColor="#3c2c2c"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/michael" />

    <Button
        android:id="@+id/ReceptionArea"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="151dp"
        android:layout_marginStart="25dp"
        android:background="@android:color/background_dark"
        android:radius="50dp"
        android:text="Reception Area"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/MichaelsOfficeBtn"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ReceptionArea"
        android:layout_marginEnd="49dp"
        android:background="@android:color/background_dark"
        android:text="Michaels Office"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/TobyButn"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ReceptionArea"
        android:layout_marginBottom="83dp"
        android:background="@android:color/background_dark"
        android:text="Toby's Cubicle"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/DwigthDeskBtn"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MichaelsOfficeBtn"
        android:layout_alignTop="@+id/TobyButn"
        android:background="@android:color/background_dark"
        android:text="Dwight's Desk"
        android:textColor="@android:color/background_light" />
</RelativeLayout>
