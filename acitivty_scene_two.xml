<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cubicles"
    tools:context=".SceneOneActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="224dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        app:srcCompat="@drawable/dwight" />

    <Button
        android:id="@+id/dwightDeskbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp"
        android:layout_marginStart="23dp"
        android:background="#806641"
        android:text="Dwight's Desk"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/kitchenButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dwightDeskbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="156dp"
        android:background="#806641"
        android:text="Kitchen Area"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/privRecButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dwightDeskbtn"
        android:layout_marginBottom="27dp"
        android:background="#806641"
        android:text="Private Recording Room"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/dwightButton"
        android:layout_width="187dp"
        android:layout_height="231dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="124dp"
        android:background="@android:color/transparent" />
</RelativeLayout>
