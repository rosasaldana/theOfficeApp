<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/officecurtains"
    tools:context=".SceneOneActivity">

    <Button
        android:id="@+id/kitchenBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/meetingBtn"
        android:layout_marginEnd="21dp"
        android:background="#dec89c"
        android:text=" Kitchen Lounge" />

    <Button
        android:id="@+id/meetingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp"
        android:layout_marginStart="115dp"
        android:background="#dec89c"
        android:text="Meeting Room" />

    <Button
        android:id="@+id/jimDeskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/meetingBtn"
        android:background="#dec89c"
        android:text="Jim's Desk" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="257dp"
        android:layout_height="321dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/jim" />

    <Button
        android:id="@+id/jimButton"
        android:layout_width="259dp"
        android:layout_height="329dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@android:color/transparent" />

</RelativeLayout>
